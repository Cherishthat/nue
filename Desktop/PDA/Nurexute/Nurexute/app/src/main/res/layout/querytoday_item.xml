<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:paddingBottom="1dp"
    android:orientation="horizontal" >

   
    
    <TextView
        android:id="@+id/querytoday_head_bedno"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="1dp"/>

    <TextView
        android:id="@+id/excute_main_head_OrderName"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="1dp"
        android:focusable="false"
         />

    <TextView
        android:id="@+id/excute_main_head_OrderBefore"
         android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="1dp"
        />

    <TextView
        android:id="@+id/excute_main_head_Uom"
         android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="1dp"
        />

    <TextView
        android:id="@+id/querytoday_orderstatus"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:textColor="@color/black"
        android:layout_margin="1dp"
        />
     <TextView
        android:id="@+id/excute_main_head_OrderExeDate"
         android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="1dp"
        android:text="@string/excute_main_head_OrderExeDate" />
    

</LinearLayout>
