<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/excute_excute_Layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:id="@+id/excute_excute_line"
        android:layout_alignParentTop="true"
       >
    <TextView
        android:id="@+id/excute_excute_tvbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/excute_excute_tvpatno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/excute_excute_tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/blue"
        android:textSize="18sp" />
</LinearLayout>
    <ListView
        android:id="@+id/excute_excute_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/excute_excute_line"
        android:layout_above="@+id/excute_excute_bottom"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:divider="#001010"
        android:dividerHeight="1dp" >
    </ListView>
    
<LinearLayout
    android:id="@+id/excute_excute_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/excute_excute_btnok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:text="执行"/>

    <Button
        android:id="@+id/excute_excute_btncancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:text="取消"
        />
</LinearLayout>
    
</RelativeLayout>
